<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="productosRoot" prefHeight="932.0" prefWidth="920.0" styleClass="productos-root" stylesheets="@../styles/productos.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ProductosController">

    <!-- 🔹 Encabezado centrado con VBox -->
    <VBox fx:id="headerProductos" alignment="CENTER" layoutY="20.0" prefWidth="899.0" spacing="5.0" styleClass="producto-header" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="20.0">
        <Label fx:id="labelTituloProductos" styleClass="producto-title" text="Gestión de Productos" />
        <Label fx:id="labelUsuarioActivo" styleClass="producto-user" text="Usuario" />
    </VBox>
    
    <!-- 🔹 Formulario -->
    <Label fx:id="labelNombre" layoutX="279.0" layoutY="114.0" styleClass="producto-label" text="Nombre:" />
    <TextField fx:id="txtNombre" layoutX="389.0" layoutY="109.0" prefWidth="300.0" promptText="Nombre del producto" styleClass="producto-input" />

    <Label fx:id="labelDescripcion" layoutX="279.0" layoutY="154.0" styleClass="producto-label" text="Descripción:" />
    <TextField fx:id="txtDescripcion" layoutX="389.0" layoutY="149.0" prefWidth="300.0" promptText="Descripción breve" styleClass="producto-input" />

    <Label fx:id="labelPrecio" layoutX="279.0" layoutY="194.0" styleClass="producto-label" text="Precio (€):" />
    <TextField fx:id="txtPrecio" layoutX="389.0" layoutY="189.0" prefWidth="300.0" promptText="Ej: 3.50" styleClass="producto-input" />

    <Label fx:id="labelTienda" layoutX="279.0" layoutY="234.0" styleClass="producto-label" text="Tienda:" />
    <ComboBox fx:id="comboTiendas" layoutX="389.0" layoutY="229.0" prefWidth="300.0" promptText="Selecciona una tienda" styleClass="producto-combo" />

    <Label fx:id="labelCategoria" layoutX="279.0" layoutY="274.0" styleClass="producto-label" text="Categoría:" />
    <ComboBox fx:id="comboCategorias" layoutX="389.0" layoutY="269.0" prefWidth="300.0" promptText="Selecciona una categoría" styleClass="producto-combo" />

    <!-- 🔹 Botones CRUD -->
    <HBox fx:id="hboxBotonesCRUD" layoutX="324.0" layoutY="320.0" spacing="10.0">
        <children>
            <Button fx:id="btnAgregar" onAction="#agregarProducto" styleClass="producto-button-success" text="Agregar" />
            <Button fx:id="btnActualizar" onAction="#actualizarProducto" styleClass="producto-button-warning" text="Actualizar" />
            <Button fx:id="btnEliminar" onAction="#eliminarProducto" styleClass="producto-button-danger" text="Eliminar" />
            <Button fx:id="btnLimpiar" onAction="#limpiarFormulario" styleClass="producto-button-secondary" text="Limpiar" />
        </children>
    </HBox>

    <!-- 🔍 Buscador -->
    <TextField fx:id="txtbuscarProducto" layoutX="50.0" layoutY="370.0" prefHeight="38.0" prefWidth="817.0" promptText="Buscar productos" styleClass="producto-search" />

    <!-- 📋 Tabla de productos -->
    <TableView fx:id="tablaProductos" layoutX="50.0" layoutY="429.0" prefHeight="383.0" prefWidth="817.0" styleClass="producto-table">
        <columns>
            <TableColumn fx:id="colId" prefWidth="60.0" styleClass="producto-table-col" text="ID" />
            <TableColumn fx:id="colNombre" prefWidth="160.0" styleClass="producto-table-col" text="Nombre" />
            <TableColumn fx:id="colDescripcion" prefWidth="220.0" styleClass="producto-table-col" text="Descripción" />
            <TableColumn fx:id="colPrecio" prefWidth="100.0" styleClass="producto-table-col" text="Precio (€)" />
            <TableColumn fx:id="colTienda" prefWidth="140.0" styleClass="producto-table-col" text="Tienda" />
            <TableColumn fx:id="colCategoria" prefWidth="137.0" styleClass="producto-table-col" text="Categoría" />
        </columns>
    </TableView>

    <!-- 💬 Mensaje -->
    <Label fx:id="labelMensaje" alignment="CENTER" layoutX="244.0" layoutY="826.0" prefHeight="38.0" prefWidth="484.0" styleClass="producto-message" text="" />

    <!-- ↩️ Botón volver -->
    <Button fx:id="btnVolver" layoutX="407.0" layoutY="876.0" onAction="#volverDashboard" styleClass="producto-button-primary" text="Volver al Dashboard" />

</AnchorPane>
