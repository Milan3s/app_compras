<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rolesRoot" prefHeight="831.0" prefWidth="1046.0" styleClass="roles-root" stylesheets="@../styles/roles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.RolesController">

    <!-- 🔹 Encabezado centrado con VBox -->
    <VBox fx:id="headerRoles" alignment="CENTER" layoutY="20.0" prefWidth="899.0" spacing="5.0" styleClass="rol-header" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="20.0">
        <Label fx:id="labelTituloRoles" styleClass="rol-title" text="Gestión de Roles" />
        <Label fx:id="labelUsuarioActivo" styleClass="rol-user" text="Usuario" />
    </VBox>


    <!-- 🔹 Formulario -->
    <Label fx:id="labelNombreRol" layoutX="297.0" layoutY="114.0" styleClass="rol-label" text="Nombre:" />
    <TextField fx:id="txtNombreRol" layoutX="407.0" layoutY="109.0" prefWidth="300.0" promptText="Nombre del rol (Ej: Administrador)" styleClass="rol-input" />

    <Label fx:id="labelDescripcionRol" layoutX="297.0" layoutY="154.0" styleClass="rol-label" text="Descripción:" />
    <TextField fx:id="txtDescripcionRol" layoutX="407.0" layoutY="149.0" prefWidth="300.0" promptText="Descripción breve del rol" styleClass="rol-input" />

    <!-- 🔹 Botones CRUD -->
    <HBox fx:id="hboxBotonesCRUD" layoutX="342.0" layoutY="200.0" spacing="10.0">
        <children>
            <Button fx:id="btnAgregarRol" onAction="#agregarRol" styleClass="rol-button-success" text="Agregar" />
            <Button fx:id="btnActualizarRol" onAction="#actualizarRol" styleClass="rol-button-warning" text="Actualizar" />
            <Button fx:id="btnEliminarRol" onAction="#eliminarRol" styleClass="rol-button-danger" text="Eliminar" />
            <Button fx:id="btnLimpiarRol" onAction="#limpiarFormulario" styleClass="rol-button-secondary" text="Limpiar" />
        </children>
    </HBox>

    <!-- 🔍 Buscador -->
    <TextField fx:id="txtBuscarRol" layoutX="50.0" layoutY="260.0" prefHeight="38.0" prefWidth="958.0" promptText="Buscar roles (por nombre o descripción)" styleClass="rol-search" />

    <!-- 📋 Tabla de roles -->
    <TableView fx:id="tablaRoles" layoutX="50.0" layoutY="319.0" prefHeight="390.0" prefWidth="958.0" styleClass="rol-table">
        <columns>
            <TableColumn fx:id="colIdRol" prefWidth="106.0" styleClass="rol-table-col" text="ID" />
            <TableColumn fx:id="colNombreRol" prefWidth="312.0" styleClass="rol-table-col" text="Nombre" />
            <TableColumn fx:id="colDescripcionRol" prefWidth="539.0" styleClass="rol-table-col" text="Descripción" />
        </columns>
    </TableView>

    <!-- 💬 Mensaje -->
    <Label fx:id="labelMensajeRol" alignment="CENTER" layoutX="285.0" layoutY="727.0" prefHeight="38.0" prefWidth="488.0" styleClass="rol-message" text="" />

    <!-- ↩️ Botón volver -->
    <Button fx:id="btnVolverRol" layoutX="451.0" layoutY="777.0" onAction="#volverDashboard" styleClass="rol-button-primary" text="Volver al Dashboard" />

</AnchorPane>
