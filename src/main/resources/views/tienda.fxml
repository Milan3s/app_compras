<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="tiendaRoot" prefHeight="932.0" prefWidth="920.0" styleClass="tienda-root" stylesheets="@../styles/tienda.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.TiendaController">

    <!-- 🔹 Encabezado centrado con VBox -->
    <VBox fx:id="headerTienda" alignment="CENTER" layoutY="20.0" prefWidth="899.0" spacing="5.0" styleClass="tienda-header" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="20.0">
        <Label fx:id="labelTituloTienda" styleClass="tienda-title" text="Gestión de Tiendas" />
        <Label fx:id="labelUsuarioActivo" styleClass="tienda-user" text="Usuario" />
    </VBox>

    <!-- 🔹 Formulario de datos -->
    <Label fx:id="labelNombre" layoutX="279.0" layoutY="114.0" styleClass="tienda-label" text="Nombre:" />
    <TextField fx:id="txtNombre" layoutX="389.0" layoutY="109.0" prefWidth="300.0" promptText="Nombre de la tienda" styleClass="tienda-input" />

    <Label fx:id="labelDireccion" layoutX="279.0" layoutY="154.0" styleClass="tienda-label" text="Dirección:" />
    <TextField fx:id="txtDireccion" layoutX="389.0" layoutY="149.0" prefWidth="300.0" promptText="Dirección de la tienda" styleClass="tienda-input" />

    <Label fx:id="labelTelefono" layoutX="279.0" layoutY="194.0" styleClass="tienda-label" text="Teléfono:" />
    <TextField fx:id="txtTelefono" layoutX="389.0" layoutY="189.0" prefWidth="300.0" promptText="Ej: 555-1234" styleClass="tienda-input" />

    <Label fx:id="labelSitioWeb" layoutX="279.0" layoutY="234.0" styleClass="tienda-label" text="Sitio Web:" />
    <TextField fx:id="txtSitioWeb" layoutX="389.0" layoutY="229.0" prefWidth="300.0" promptText="https://ejemplo.com" styleClass="tienda-input" />

    <!-- 🔹 Campo adicional -->
    <Label fx:id="labelRepartidor" layoutX="279.0" layoutY="274.0" styleClass="tienda-label" text="Repartidor:" />
    <ComboBox fx:id="comboRepartidor" layoutX="389.0" layoutY="269.0" prefWidth="300.0" promptText="Seleccionar repartidor" styleClass="tienda-input" />

    <!-- 🔹 Botones de acción -->
    <HBox fx:id="hboxBotonesTienda" layoutX="324.0" layoutY="320.0" spacing="10.0">
        <children>
            <Button fx:id="btnAgregar" onAction="#agregarTienda" styleClass="tienda-button-success" text="Agregar" />
            <Button fx:id="btnActualizar" onAction="#actualizarTienda" styleClass="tienda-button-warning" text="Actualizar" />
            <Button fx:id="btnEliminar" onAction="#eliminarTienda" styleClass="tienda-button-danger" text="Eliminar" />
            <Button fx:id="btnLimpiar" onAction="#limpiarFormulario" styleClass="tienda-button-secondary" text="Limpiar" />
        </children>
    </HBox>

    <!-- 🔍 Buscar tienda -->
    <TextField fx:id="txtBuscarTienda" layoutX="50.0" layoutY="370.0" prefHeight="38.0" prefWidth="817.0" promptText="Buscar tiendas" styleClass="tienda-search" />

    <!-- 📋 Tabla de tiendas -->
    <TableView fx:id="tablaTiendas" layoutX="50.0" layoutY="429.0" prefHeight="383.0" prefWidth="817.0" styleClass="tienda-table">
        <columns>
            <TableColumn fx:id="colId" prefWidth="60.0" styleClass="tienda-table-col" text="ID" />
            <TableColumn fx:id="colNombre" prefWidth="160.0" styleClass="tienda-table-col" text="Nombre" />
            <TableColumn fx:id="colDireccion" prefWidth="200.0" styleClass="tienda-table-col" text="Dirección" />
            <TableColumn fx:id="colTelefono" prefWidth="100.0" styleClass="tienda-table-col" text="Teléfono" />
            <TableColumn fx:id="colSitioWeb" prefWidth="180.0" styleClass="tienda-table-col" text="Sitio Web" />
            <TableColumn fx:id="colRepartidor" prefWidth="117.0" styleClass="tienda-table-col" text="Repartidor" />
        </columns>
    </TableView>

    <!-- 💬 Mensaje -->
    <Label fx:id="labelMensaje" alignment="CENTER" layoutX="243.0" layoutY="826.0" prefHeight="38.0" prefWidth="484.0" styleClass="tienda-message" text="" />

    <!-- ↩️ Botón volver -->
    <Button fx:id="btnVolver" layoutX="407.0" layoutY="875.0" onAction="#volverDashboard" styleClass="tienda-button-primary" text="Volver al Dashboard" />

</AnchorPane>
